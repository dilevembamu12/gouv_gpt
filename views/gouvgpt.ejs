    .mention-list.show { display: block; animation: slideUp 0.15s ease-out; }
    .mention-item { padding: 8px 12px; display: flex; align-items: center; gap: 12px; cursor: pointer; border-radius: 8px; color: var(--c-text-primary); font-size: 13px; }
