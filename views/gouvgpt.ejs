        <div class="modal-footer">
          <button type="button" class="btn btn-primary w-100 py-2 fw-bold" style="background:#006fee; border:none; border-radius:10px;" onclick="createRoom()">
            D√©marrer le Conseil
          </button>
        </div>
      </div>
    </div>
  </div>
  
  <!-- PROMPTS MODAL -->
  <div class="modal fade" id="promptModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-header border-0 pb-0"><h5 class="modal-title fw-bold text-warning"><i class="bi bi-stars"></i> Biblioth√®que</h5><button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button></div>
        <div class="modal-body pt-2"><div class="row g-3" id="promptGrid"></div></div>
      </div>
    </div>
  </div>

  <!-- SIDEBAR -->
  <aside class="app-sidebar">
    <div class="brand-area"><div class="brand-logo"><i class="bi bi-grid-fill"></i></div><div class="fw-bold fs-5">GouvBrain</div></div>
    
    <div class="sidebar-section-title d-flex justify-content-between">
        <span>Historique</span>
        <i class="bi bi-plus-circle text-primary" style="cursor:pointer;" onclick="showNewRoomModal()"></i>
    </div>
    <div id="roomList" class="flex-grow-1 overflow-auto" style="max-height: 40vh; margin-bottom: 20px;">
        <!-- Room list injected here -->
        <div class="text-center text-secondary small py-2">Chargement...</div>
    </div>

    <div class="sidebar-section-title">Cabinet Actif</div>
    <div id="activePersonasCol" class="d-flex flex-column overflow-auto pe-1" style="flex:1;"></div>
  </aside>

  <!-- MAIN -->
  <main class="app-main">
    <header class="chat-header">
        <div class="d-flex align-items-center gap-3">
            <h5 class="m-0 fw-bold" id="headerRoomTitle">Conseil des Ministres</h5>
        </div>
        <button class="btn btn-sm btn-icon text-secondary" onclick="document.getElementById('appInspector').classList.toggle('collapsed')"><i class="bi bi-layout-sidebar-reverse"></i></button>
    </header>

    <div id="chatWrap" class="chat-content">
        <div class="d-flex flex-column align-items-center justify-content-center h-100 text-center opacity-50 empty-state">
            <div style="font-size: 48px; margin-bottom: 20px;">üèõÔ∏è</div>
            <h4>GouvBrain</h4>
            <p class="text-secondary">S√©lectionnez une session ou cr√©ez-en une nouvelle.</p>
        </div>
