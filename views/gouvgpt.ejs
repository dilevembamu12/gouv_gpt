        /* Palette Lobe-Chat Like */
        --c-bg-body: #000000;
        --c-bg-sidebar: #080808; /* Gauche et Droite */
        --c-bg-card: #181818;
        --c-bg-input: #1a1a1a;
        --c-bg-bubble-bot: #1c1c1c;
        --c-bg-bubble-user: #006fee; 
        
        --c-border: #2c2c2c;
        --c-border-hover: #3a3a3a;
        
        --c-text-primary: #ffffff;
        --c-text-secondary: #989899;
        --c-text-tertiary: #666666;
        
        --r-radius-lg: 16px;
        --r-radius-md: 12px;
        --r-radius-sm: 8px;
        
        --font-sans: 'Inter', sans-serif;
        --font-mono: 'JetBrains Mono', monospace;
    }

    body {
        background-color: var(--c-bg-body);
        color: var(--c-text-primary);
        font-family: var(--font-sans);
        height: 100vh;
        overflow: hidden;
        display: flex; /* Layout Flex global */
        font-size: 14.5px;
        -webkit-font-smoothing: antialiased;
    }

    /* --- COMMON SIDEBAR STYLES --- */
    .app-sidebar, .app-inspector {
        background-color: var(--c-bg-sidebar);
        display: flex;
        flex-direction: column;
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1); /* Animation fluide style iOS/Lobe */
        z-index: 100;
        flex-shrink: 0;
    }

    /* --- LEFT SIDEBAR --- */
    .app-sidebar {
        width: 260px;
        border-right: 1px solid var(--c-border);
        padding: 16px;
    }

    /* --- RIGHT INSPECTOR (Nouveau) --- */
    .app-inspector {
        width: 300px;
        border-left: 1px solid var(--c-border);
        padding: 0; /* Padding g√©r√© en interne pour scroll */
        position: relative;
    }
    
    /* Classe pour fermer l'inspecteur */
    .app-inspector.collapsed {
        width: 0;
        opacity: 0;
        overflow: hidden;
        border-left: none;
    }

    /* Inspector Header */
    .inspector-header {
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 20px;
        border-bottom: 1px solid var(--c-border);
        font-weight: 600;
        flex-shrink: 0;
    }

    .inspector-content {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
    }

    /* File List Items (Right Sidebar) */
    .file-card {
        background: var(--c-bg-card);
        border: 1px solid var(--c-border);
        border-radius: var(--r-radius-md);
        padding: 12px;
        margin-bottom: 8px;
        display: flex;
        align-items: flex-start;
        gap: 10px;
        transition: border-color 0.2s;
    }
    .file-card:hover { border-color: var(--c-border-hover); }
    .file-icon {
        width: 32px; height: 32px;
        background: rgba(255, 82, 82, 0.1);
        color: #ff5252;
        border-radius: 6px;
        display: flex; align-items: center; justify-content: center;
        flex-shrink: 0;
    }
    .file-info { overflow: hidden; flex: 1; }
    .file-name { font-size: 13px; font-weight: 500; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
    .file-meta { font-size: 11px; color: var(--c-text-tertiary); margin-top: 2px; }


    /* --- LEFT SIDEBAR CONTENT --- */
    .brand-area {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 0 8px 20px 8px;
        margin-bottom: 10px;
        border-bottom: 1px solid var(--c-border);
    }
    
    .brand-logo {
        width: 32px; height: 32px;
        background: linear-gradient(135deg, #006fee 0%, #00c6f7 100%);
        border-radius: 8px;
        display: flex; align-items: center; justify-content: center;
        color: white; font-size: 16px;
    }

    .sidebar-section-title {
        font-size: 11px;
        font-weight: 600;
        color: var(--c-text-tertiary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin: 16px 8px 8px;
    }

    .persona-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 8px 10px;
        border-radius: var(--r-radius-sm);
        cursor: pointer;
        transition: all 0.2s;
        border: 1px solid transparent;
        margin-bottom: 2px;
    }
    .persona-item:hover { background-color: var(--c-bg-card); }
    .persona-item.active { background-color: rgba(0, 111, 238, 0.1); border-color: rgba(0, 111, 238, 0.2); }
    
    .persona-avatar {
        width: 28px; height: 28px;
        border-radius: 6px;
        background: var(--c-bg-card);
        display: flex; align-items: center; justify-content: center;
        font-size: 14px;
        border: 1px solid var(--c-border);
    }

    /* --- MAIN CHAT AREA --- */
    .app-main {
        flex: 1;
        display: flex;
        flex-direction: column;
        position: relative;
        background: radial-gradient(circle at 50% -20%, #111 0%, #000 60%);
        min-width: 0; /* Important pour que le flex shrink fonctionne avec le text-truncate */
    }

    .chat-header {
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 24px;
        border-bottom: 1px solid rgba(255,255,255,0.05);
        backdrop-filter: blur(10px);
        background: rgba(0,0,0,0.5);
        position: absolute; top: 0; left: 0; right: 0; z-index: 10;
    }

    .chat-content {
        flex: 1;
        overflow-y: auto;
        padding: 80px 20px 180px 20px; 
        display: flex;
        flex-direction: column;
        gap: 24px;
        scroll-behavior: smooth;
    }
    
    .chat-content::-webkit-scrollbar { width: 6px; }
    .chat-content::-webkit-scrollbar-thumb { background: #333; border-radius: 10px; }
    .chat-content::-webkit-scrollbar-track { background: transparent; }

    /* --- MESSAGES --- */
    .message-row {
        display: flex;
        gap: 16px;
        max-width: 900px;
        margin: 0 auto;
        width: 100%;
        animation: fadeIn 0.3s ease;
        position: relative;
    }
    .message-row.me { flex-direction: row-reverse; }

    /* Indentation Minist√®res */
    .message-row.sub-message {
        margin-left: auto;
        padding-left: 40px; 
        max-width: 900px;
    }
    .message-row.sub-message::before {
        content: ''; position: absolute; left: 20px; top: -30px; bottom: 50%; width: 2px;
        background-color: var(--c-border); border-bottom-left-radius: 8px; border-bottom: 2px solid var(--c-border);
    }
    .message-row.sub-message::after {
        content: ''; position: absolute; left: 20px; top: 50%; width: 12px; height: 2px; background-color: var(--c-border);
    }

    .message-avatar-container { flex-shrink: 0; margin-top: 4px; z-index: 1; }
    .message-avatar {
        width: 40px; height: 40px;
        border-radius: 50%;
        background: var(--c-bg-card);
        border: 1px solid var(--c-border);
        display: flex; align-items: center; justify-content: center;
        font-size: 20px;
    }

    .message-bubble-container { display: flex; flex-direction: column; max-width: 80%; }
    .message-row.me .message-bubble-container { align-items: flex-end; }

    .message-sender {
        font-size: 12px; color: var(--c-text-secondary); margin-bottom: 6px; padding-left: 2px; font-weight: 500;
    }
    .message-row.me .message-sender { display: none; }

    .message-bubble {
        padding: 12px 18px;
        border-radius: 18px;
        line-height: 1.6;
        position: relative;
        font-size: 15px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.2);
    }
    
    .message-row.bot .message-bubble {
        background-color: var(--c-bg-bubble-bot);
        border: 1px solid var(--c-border);
        border-top-left-radius: 4px;
    }
    
    .message-row.synthesis .message-bubble {
        background: linear-gradient(145deg, #1c1c1c 0%, #111 100%);
        border: 1px solid #333;
        box-shadow: 0 4px 20px rgba(0,0,0,0.3);
    }
    .message-row.synthesis .message-bubble::before {
        content: ''; position: absolute; left: 0; top: 0; bottom: 0; width: 4px;
        background: linear-gradient(to bottom, #006fee, #a464ff);
        border-top-left-radius: 4px; border-bottom-left-radius: 4px;
    }

    .message-row.me .message-bubble {
        background-color: var(--c-bg-bubble-user);
        color: white;
        border-top-right-radius: 4px;
        background-image: linear-gradient(135deg, #006fee 0%, #005bc4 100%);
    }

    /* --- FIX LAYOUT: Dernier message --- */
    /* Ajoute une marge au dernier message pour qu'il ne soit jamais cach√© par l'input */
    .message-row:last-child {
        margin-bottom: 120px !important;
    }

    .rag-sources { display: flex; flex-wrap: wrap; gap: 8px; margin-top: 10px; }
    .rag-chip {
        display: inline-flex; align-items: center; gap: 6px; padding: 4px 10px;
        border-radius: 6px; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08);
        font-size: 11px; color: var(--c-text-secondary); font-family: var(--font-mono); cursor: default;
    }
    .rag-chip i { font-size: 12px; color: #ff5252; }

