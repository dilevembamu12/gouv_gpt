    .thinking-dots::after { content: ' .'; animation: dots 1.5s steps(5, end) infinite; }
    @keyframes dots { 0%, 20% { content: ' .'; } 40% { content: ' ..'; } 60% { content: ' ...'; } 80%, 100% { content: ' ....'; } }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
    @keyframes slideUp { from { opacity: 0; transform: translateY(5px); } to { opacity: 1; transform: translateY(0); } }
    .prompt-card { background: var(--c-bg-input); border: 1px solid var(--c-border); border-radius: 12px; padding: 12px; cursor: pointer; transition: all 0.2s; height: 100%; display: flex; flex-direction: column; gap: 8px; }
    .prompt-card:hover { background: var(--c-bg-card); border-color: #006fee; transform: translateY(-2px); }
