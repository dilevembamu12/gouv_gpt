<!-- 
  GouvBrain Frontend
  Vue Salon avec s√©lection de Personas et Partage RAG
-->
<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>GouvBrain ‚Ä¢ Conseil des Ministres IA</title>
  
  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet"/>

  <style>
    :root { 
        --bg-main: #070A12; 
        --bg-panel: #0E1A2B; 
        --text-main: #EAF2FF; 
        --border-color: rgba(255,255,255,0.1); 
    }
    
    body { 
        background-color: var(--bg-main); 
        color: var(--text-main); 
        height: 100vh; 
        overflow: hidden; 
        display: flex;
        flex-direction: column;
    }

    /* Modale Style */
    .modal-content { 
        background-color: var(--bg-panel); 
        border: 1px solid var(--border-color); 
        color: white; 
    }
    .form-check-input:checked { background-color: #3b82f6; border-color: #3b82f6; }

    /* Layout */
    .app-container { flex: 1; display: flex; overflow: hidden; opacity: 0.3; pointer-events: none; transition: opacity 0.3s; }
    .sidebar { width: 320px; background: rgba(255,255,255,0.02); border-right: 1px solid var(--border-color); overflow-y: auto; }
    .chat-area { flex: 1; display: flex; flex-direction: column; background: radial-gradient(circle at top right, #1e293b 0%, #070A12 40%); }
    
    /* Components */
    .persona-card { 
        background: rgba(255,255,255,0.05); 
        border: 1px solid transparent; 
        transition: all 0.2s; 
    }
    .persona-card.active { border-color: #3b82f6; background: rgba(59, 130, 246, 0.1); }
    
    .chat-bubble { max-width: 80%; border-radius: 12px; padding: 12px; margin-bottom: 12px; }
    .chat-bubble.me { background-color: #2563eb; align-self: flex-end; color: white; margin-left: auto; }
    .chat-bubble.bot { background-color: #1f2937; border: 1px solid var(--border-color); align-self: flex-start; }

    .input-area { background: var(--bg-panel); border-top: 1px solid var(--border-color); padding: 1rem; }
    .form-control-dark { background: rgba(0,0,0,0.3); border: 1px solid var(--border-color); color: white; }
    .form-control-dark:focus { background: rgba(0,0,0,0.5); color: white; border-color: #3b82f6; box-shadow: none; }
  </style>
</head>

<body>

  <!-- MODALE : CR√âATION DE SALON -->
  <div class="modal fade" id="roomModal" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content shadow-lg">
        <div class="modal-header border-0 pb-0">
          <h4 class="modal-title fw-bold"><i class="bi bi-grid-fill me-2"></i>Ouverture de Session</h4>
        </div>
        <div class="modal-body">
          <p class="text-muted mb-4">Configurez le conseil des ministres pour cette session.</p>
          
          <div class="mb-4">
            <label class="form-label text-uppercase small fw-bold text-muted">Objet de la r√©union</label>
            <input type="text" class="form-control form-control-lg bg-dark text-light border-secondary" id="roomNameInput" placeholder="ex: Projet de Loi Finances 2026">
          </div>

          <label class="form-label text-uppercase small fw-bold text-muted mb-3">Minist√®res Convoqu√©s</label>
          <div class="row g-3" id="personaSelector">
            <!-- Rempli par JS -->
          </div>
        </div>
        <div class="modal-footer border-0 pt-0">
          <button type="button" class="btn btn-primary btn-lg w-100 fw-bold" onclick="createRoom()">
            <i class="bi bi-check2-circle me-2"></i> Ouvrir le Salon
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- BARRE SUP√âRIEURE -->
  <header class="d-flex justify-content-between align-items-center p-3 border-bottom border-secondary bg-dark" style="z-index: 10;">
      <div class="d-flex align-items-center gap-3">
          <div class="fw-bold fs-5 text-white" id="roomTitleDisplay">GouvBrain</div>
          <span class="badge bg-secondary rounded-pill px-3" id="docCountBadge">0 Document(s)</span>
      </div>
      <div>
          <a href="/admin" class="btn btn-sm btn-outline-secondary text-light border-secondary">
              <i class="bi bi-gear-fill me-1"></i> Config Admin
          </a>
      </div>
  </header>

  <!-- CONTENU PRINCIPAL -->
  <div class="app-container" id="appShell">
    
    <!-- BARRE LAT√âRALE (MINISTRES) -->
    <div class="sidebar p-3">
        <h6 class="text-muted text-uppercase small fw-bold mb-3">Minist√®res Pr√©sents</h6>
        <div id="activePersonasCol">
            <!-- Liste dynamique -->
        </div>
    </div>

    <!-- ZONE DE CHAT -->
    <div class="chat-area">
        <div id="chatWrap" class="flex-grow-1 p-4" style="overflow-y:auto; display: flex; flex-direction: column;">
            <div class="text-center text-muted mt-5 opacity-50">
                <i class="bi bi-chat-square-quote fs-1"></i>
                <p class="mt-2">Le salon est ouvert.<br>Posez une question ou d√©posez un document PDF pour analyse.</p>
            </div>
        </div>

        <!-- ZONE DE SAISIE -->
        <div class="input-area">
            <!-- Zone Upload RAG -->
            <div class="d-flex align-items-center gap-2 mb-2">
                <input type="file" id="ragInput" class="d-none" accept=".pdf,.txt,.docx" onchange="uploadRag()">
                <button class="btn btn-outline-secondary btn-sm border-secondary text-muted" onclick="document.getElementById('ragInput').click()">
                    <i class="bi bi-paperclip me-1"></i> Ajouter RAG
                </button>
                <div id="uploadStatus" class="small text-muted"></div>
            </div>

            <div class="d-flex gap-2">
                <input type="text" id="chatInput" class="form-control form-control-dark form-control-lg" placeholder="Posez une question au cabinet...">
                <button class="btn btn-primary btn-lg px-4" onclick="sendMessage()">
                    <i class="bi bi-send-fill"></i>
                </button>
            </div>
        </div>
    </div>
  </div>

  <!-- SCRIPTS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let currentRoomId = null;
    let allPersonas = [];
    let activePersonas = [];
    let docCount = 0;

    // --- 1. INITIALISATION ---
    async function init() {
        try {
            const res = await fetch('/api/admin/personas');
            const config = await res.json();
            allPersonas = config.personas;

            const selector = document.getElementById('personaSelector');
            selector.innerHTML = allPersonas.map(p => `
                <div class="col-md-6">
                    <div class="form-check p-3 border border-secondary rounded bg-dark h-100">
                        <input class="form-check-input fs-5 mt-2" type="checkbox" value="${p.id}" id="chk_${p.id}" checked>
                        <label class="form-check-label d-flex align-items-start gap-3 ms-2 cursor-pointer" for="chk_${p.id}">
                            <span class="fs-2">${p.avatarEmoji}</span>
                            <div>
                                <div class="fw-bold text-light">${p.ministry}</div>
                                <div class="small text-muted">${p.name}</div>
                            </div>
                        </label>
                    </div>
                </div>
            `).join('');

            new bootstrap.Modal(document.getElementById('roomModal')).show();
        } catch (e) {
            console.error("Erreur init:", e);
            alert("Impossible de charger la configuration. V√©rifiez le serveur.");
        }
    }

    // --- 2. CR√âATION SALON ---
    async function createRoom() {
        const nameInput = document.getElementById('roomNameInput');
        const name = nameInput.value || "Session Ordinaire";
        const checked = [...document.querySelectorAll('#personaSelector input:checked')].map(cb => cb.value);
        
        const btn = document.querySelector('.modal-footer button');
        btn.disabled = true;
        btn.innerHTML = "Cr√©ation...";

        try {
            const res = await fetch('/api/rooms', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ name, selectedPersonaIds: checked })
            });
            const data = await res.json();
            
            if(data.ok) {
                currentRoomId = data.room.id;
                activePersonas = allPersonas.filter(p => data.room.activePersonas.includes(p.id));
                
                // UI Unlock
                document.getElementById('roomTitleDisplay').innerHTML = `<i class="bi bi-circle-fill text-success small me-2"></i> ${data.room.name}`;
                document.querySelector('.modal.show').classList.remove('show');
                document.querySelector('.modal-backdrop').remove();
                document.getElementById('roomModal').style.display = 'none';
                
                const shell = document.getElementById('appShell');
                shell.style.opacity = '1';
                shell.style.pointerEvents = 'all';

                renderSidebar();
            }
        } catch (e) {
            alert("Erreur cr√©ation salon");
        }
    }

    function renderSidebar() {
        const container = document.getElementById('activePersonasCol');
        container.innerHTML = activePersonas.map(p => `
            <div class="card mb-2 bg-dark border-secondary text-light persona-card">
                <div class="card-body p-2 d-flex align-items-center gap-2">
                    <div class="fs-4">${p.avatarEmoji}</div>
                    <div class="overflow-hidden">
                        <div class="fw-bold text-truncate" style="font-size:0.9rem">${p.ministry}</div>
                        <div class="text-muted small text-truncate">${p.role}</div>
                    </div>
                    <div class="ms-auto spinner-border spinner-border-sm text-primary d-none" id="loader_${p.id}"></div>
                </div>
            </div>
        `).join('');
    }

    // --- 3. GESTION UPLOAD RAG ---
    async function uploadRag() {
        const fileInput = document.getElementById('ragInput');
        const file = fileInput.files[0];
        if(!file) return;

        const statusDiv = document.getElementById('uploadStatus');
        statusDiv.innerHTML = `<span class="spinner-border spinner-border-sm"></span> Envoi de ${file.name} vers MinIO...`;

        const fd = new FormData();
        fd.append('file', file);
        
        try {
            const res = await fetch(`/api/rooms/${currentRoomId}/ingest`, { method: 'POST', body: fd });
            const data = await res.json();
            
            if(data.ok) {
                statusDiv.innerHTML = `<span class="text-success"><i class="bi bi-check-circle"></i> ${file.name} stock√© & partag√©.</span>`;
                docCount++;
                document.getElementById('docCountBadge').innerText = `${docCount} Document(s)`;
                
                // Message syst√®me dans le chat
                addChatLine({
                    name: "Syst√®me",
                    text: `üìÇ Document vers√© au dossier : <strong>${file.name}</strong>.\nAccessible par : ${activePersonas.map(p=>p.ministry).join(', ')}.`,
                    color: "#6c757d"
                }, false);
            } else {
                statusDiv.innerHTML = `<span class="text-danger">Erreur: ${data.error}</span>`;
            }
        } catch(e) {
            statusDiv.innerHTML = `<span class="text-danger">Erreur r√©seau</span>`;
        }
        fileInput.value = ""; // Reset
    }

    // --- 4. LOGIQUE DE CHAT ---
    async function sendMessage() {
        const input = document.getElementById('chatInput');
        const text = input.value.trim();
        if(!text) return;

        input.value = "";
        
        // Afficher mon message
        addChatLine({ name: "Moi", text: text }, true);

        // Envoyer la requ√™te √† tous les ministres pr√©sents
        // (Dans un vrai cas, on pourrait choisir de ne parler qu'√† un seul)
        activePersonas.forEach(p => askPersona(p, text));
    }

    async function askPersona(persona, question) {
        // UI: Loader actif
        const loader = document.getElementById(`loader_${persona.id}`);
        if(loader) loader.classList.remove('d-none');

        // Cr√©ation d'un placeholder de r√©ponse
        const msgId = `msg_${persona.id}_${Date.now()}`;
        
        try {
            const res = await fetch('/api/chat/n8n', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({
                    roomId: currentRoomId,
                    personaId: persona.id,
                    message: question
                })
            });
            const data = await res.json();
            
            // Afficher la r√©ponse
            addChatLine({
                name: `${persona.ministry}`,
                text: data.response,
                color: persona.color,
                avatar: persona.avatarEmoji
            }, false);

        } catch (e) {
            addChatLine({
                name: "Erreur",
                text: `Impossible de joindre ${persona.ministry}.`,
                color: "red"
            }, false);
        } finally {
            if(loader) loader.classList.add('d-none');
        }
    }

    function addChatLine(msgData, isMe) {
        const wrap = document.getElementById('chatWrap');
        const div = document.createElement('div');
        
        if (isMe) {
            div.className = "chat-bubble me";
            div.innerHTML = `<div>${msgData.text}</div>`;
        } else {
            div.className = "d-flex gap-2 mb-3";
            div.innerHTML = `
                <div class="fs-4 flex-shrink-0" style="margin-top:-5px">${msgData.avatar || 'ü§ñ'}</div>
                <div class="chat-bubble bot flex-grow-1" style="border-left: 3px solid ${msgData.color || '#555'}">
                    <div class="fw-bold small mb-1" style="color: ${msgData.color || '#aaa'}">${msgData.name}</div>
                    <div style="white-space: pre-wrap;">${msgData.text}</div>
                </div>
            `;
        }
        
        wrap.appendChild(div);
        wrap.scrollTop = wrap.scrollHeight;
    }

    // Event Enter sur input
    document.getElementById('chatInput').addEventListener('keypress', (e) => {
        if(e.key === 'Enter') sendMessage();
    });

    init();
  </script>
</body>
</html>