                <button class="tool-btn" onclick="openPromptLibrary()"><i class="bi bi-stars"></i></button>
                <button class="tool-btn" onclick="clearChat()"><i class="bi bi-eraser"></i></button>
            </div>
            <textarea id="chatInput" class="chat-textarea" rows="1" placeholder="Votre question... (@ pour mentionner)"></textarea>
            <div class="input-footer">
                <div class="model-selector"><i class="bi bi-lightning-fill text-warning"></i> GPT-4o</div>
                <button id="sendBtn" class="send-btn" onclick="sendMessage()"><i class="bi bi-arrow-up-short fs-4"></i></button>
            </div>
        </div>
        <div class="footer-text">IA Gouvernementale - V√©rifiez les informations.</div>
    </div>
  </main>

  <!-- INSPECTOR -->
  <aside class="app-inspector" id="appInspector">
    <div class="inspector-header">
        <span>Dossier de S√©ance</span>
        <button class="btn btn-sm text-secondary p-0" onclick="toggleInspector()"><i class="bi bi-x-lg"></i></button>
    </div>
    <div class="inspector-content">
        <div class="sidebar-section-title mt-0">Base de Connaissances</div>
        <div id="inspectorFileList">
            <div class="text-center text-secondary small py-4 opacity-50 fst-italic">Aucun document joint</div>
        </div>

        <div class="sidebar-section-title mt-4">Param√®tres du Mod√®le</div>
        <div class="p-3 rounded-3 mb-2" style="background: var(--c-bg-card); border: 1px solid var(--c-border);">
            <div class="d-flex justify-content-between mb-2">
                <span class="small">Temp√©rature</span>
                <span class="small text-secondary">0.3</span>
            </div>
            <div class="progress" style="height: 4px; background: #333;">
                <div class="progress-bar bg-primary" style="width: 30%"></div>
            </div>
            <div class="d-flex justify-content-between mt-3 mb-2">
                <span class="small">RAG Top-K</span>
                <span class="small text-secondary">5</span>
            </div>
            <div class="progress" style="height: 4px; background: #333;">
                <div class="progress-bar bg-success" style="width: 50%"></div>
            </div>
        </div>
    </div>
  </aside>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let currentRoomId = null;
    let allPersonas = [];
    let activePersonas = [];
    let isPolling = false;

    // --- ROOM LOGIC ---
    async function init() {
        // Fetch Personas
        const resP = await fetch('/api/admin/personas');
        const dataP = await resP.json();
        allPersonas = dataP.personas;
        
        // Populate Modal
        document.getElementById('personaSelector').innerHTML = allPersonas.map(p => `
            <div class="col-6"><div class="form-check bg-dark p-2 rounded border border-secondary border-opacity-25">
                <input class="form-check-input" type="checkbox" value="${p.id}" checked>
                <label class="form-check-label ms-2 text-white small">${p.avatarEmoji} ${p.ministry}</label>
            </div></div>`).join('');

        // Fetch Rooms & Select last one
        await refreshRoomList();
    }

    async function refreshRoomList() {
        const res = await fetch('/api/rooms');
        const data = await res.json();
        const list = document.getElementById('roomList');
        
        if(data.rooms.length === 0) {
            list.innerHTML = `<div class="text-center text-secondary small py-2">Aucune session</div>`;
            showNewRoomModal();
        } else {
            list.innerHTML = data.rooms.map(r => `
                <div class="room-item ${currentRoomId === r.id ? 'active' : ''}" onclick="loadRoom('${r.id}')">
                    <i class="bi bi-chat-left-text me-2"></i>${r.name}
                </div>
            `).join('');
            
            // Auto-load most recent if none selected
            if(!currentRoomId && data.rooms.length > 0) {
                loadRoom(data.rooms[0].id);
            }
        }
    }

    async function loadRoom(id) {
        currentRoomId = id;
        
        // Update UI Active State
        document.querySelectorAll('.room-item').forEach(el => el.classList.remove('active'));
        const activeItem = [...document.querySelectorAll('.room-item')].find(el => el.textContent.includes(id)); // Simple match, better with ID attr
        // Re-rendering list to set active class cleanly
        const resList = await fetch('/api/rooms'); 
        const dataList = await resList.json();
        document.getElementById('roomList').innerHTML = dataList.rooms.map(r => `
            <div class="room-item ${currentRoomId === r.id ? 'active' : ''}" onclick="loadRoom('${r.id}')">
                <i class="bi bi-chat-left-text me-2"></i>${r.name}
            </div>
        `).join('');

        // Fetch Room Details
        const res = await fetch(`/api/rooms/${id}`);
        const data = await res.json();
        const room = data.room;

        document.getElementById('headerRoomTitle').innerText = room.name;
        
        // Update Active Personas Sidebar
        activePersonas = allPersonas.filter(p => room.activePersonas.includes(p.id));
        document.getElementById('activePersonasCol').innerHTML = activePersonas.map(p => `
            <div class="persona-item">
                <div class="persona-avatar">${p.avatarEmoji}</div>
                <div class="overflow-hidden">
                    <div class="fw-bold text-white" style="font-size:12px;">${p.ministry}</div>
                </div>
            </div>`).join('');
        
        // Restore Chat History
        const chatWrap = document.getElementById('chatWrap');
        chatWrap.innerHTML = ''; // Clear
        
        if (room.messages && room.messages.length > 0) {
            room.messages.forEach(msg => {
                if (msg.role === 'user') {
                    addMessage('me', msg.content);
                } else if (msg.role === 'assistant') {
                    // Check if content is complex JSON (from n8n) or string
                    if (typeof msg.content === 'object') {
                        renderResponse(msg.content);
                    } else {
                        // Fallback string
                        addMessage('bot', msg.content, {name: "Assistant", avatar: "ü§ñ"});
                    }
                }
            });
        } else {
            chatWrap.innerHTML = `<div class="d-flex flex-column align-items-center justify-content-center h-100 text-center opacity-50 empty-state"><div style="font-size: 48px; margin-bottom: 20px;">üìÇ</div><h4>Session Ouverte</h4><p class="text-secondary">Historique vide.</p></div>`;
        }
        
        // Update Files Inspector
        const fileList = document.getElementById('inspectorFileList');
        if(room.files && room.files.length > 0) {
            fileList.innerHTML = room.files.map(f => `<div class="p-2 border border-secondary border-opacity-25 rounded bg-dark small"><i class="bi bi-file-earmark me-2"></i>${f.name}</div>`).join('');
        } else {
            fileList.innerHTML = '<div class="text-center text-secondary small py-4 opacity-50 fst-italic">Vide</div>';
        }
    }

    function showNewRoomModal() { new bootstrap.Modal(document.getElementById('roomModal')).show(); }

    async function createRoom() {
        const name = document.getElementById('roomNameInput').value || "Conseil";
        const ids = [...document.querySelectorAll('#personaSelector input:checked')].map(c => c.value);
        const res = await fetch('/api/rooms', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({name, selectedPersonaIds:ids}) });
        const data = await res.json();
        if(data.ok) {
            bootstrap.Modal.getInstance(document.getElementById('roomModal')).hide();
            await refreshRoomList();
            loadRoom(data.room.id);
        }
    }

    // --- CHAT & PROMPTS (Same logic as before) ---
    const PROMPTS = [
        { icon: "üí∞", title: "Budget", text: "Quels sont les impacts budg√©taires ?", desc: "Analyse financi√®re." },
        { icon: "‚öñÔ∏è", title: "Juridique", text: "Quels sont les risques juridiques ?", desc: "Conformit√©." },
        { icon: "üö®", title: "Crise", text: "Plan d'action d'urgence.", desc: "R√©ponse rapide." }
    ];
    function openPromptLibrary() {
        document.getElementById('promptGrid').innerHTML = PROMPTS.map(p => `
            <div class="col-md-4"><div class="prompt-card" onclick="usePrompt('${p.text}')">
                <div class="fs-4 mb-2">${p.icon}</div><div class="fw-bold small">${p.title}</div><div class="small text-secondary">${p.desc}</div>
            </div></div>`).join('');
        new bootstrap.Modal(document.getElementById('promptModal')).show();
    }
    function usePrompt(txt) { document.getElementById('chatInput').value = txt; document.getElementById('chatInput').focus(); bootstrap.Modal.getInstance(document.getElementById('promptModal')).hide(); }

    async function sendMessage() {
        if(isPolling) return;
        const text = document.getElementById('chatInput').value.trim();
        if(!text) return;
        
        document.getElementById('chatInput').value = '';
        document.querySelector('.empty-state')?.remove();
        document.getElementById('sendBtn').disabled = true;
        
        addMessage('me', text);
        document.getElementById('statusIndicator').innerHTML = `<span class="thinking-dots">Consultation...</span>`;

        try {
            const res = await fetch('/api/chat/n8n', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({roomId:currentRoomId, message:text}) });
            const json = await res.json();
            if(json.ok && json.taskId) pollTask(json.taskId);
        } catch(e) { console.error(e); }
    }

    async function pollTask(taskId) {
        isPolling = true;
        const check = async () => {
            const res = await fetch(`/api/chat/task/${taskId}`);
            const json = await res.json();
            if(json.status === 'completed') {
                isPolling = false;
                document.getElementById('statusIndicator').innerHTML = '';
                document.getElementById('sendBtn').disabled = false;
                let data = json.data.data || json.data;
                if(Array.isArray(data)) data = data[0];
                renderResponse(data);
            } else if(json.status === 'error') {
                isPolling = false;
                document.getElementById('statusIndicator').innerHTML = 'Erreur';
            } else setTimeout(check, 2000);
        };
        check();
    }

    function renderResponse(data) {
        if(data.global_synthesis) addMessage('synthesis', data.global_synthesis, {name:"Synth√®se", avatar:"üèõÔ∏è"});
        if(data.responses) data.responses.forEach(r => addMessage('bot', r.text, {name:r.ministry_name, avatar:r.avatar_emoji, isSubItem:true}, r.rag_sources));
    }

    function addMessage(type, text, meta={}, sources=[]) {
        const div = document.createElement('div');
        const isMe = type==='me';
        let cls = `message-row ${isMe?'me':(type==='synthesis'?'synthesis':'bot')}`;
        if(meta.isSubItem) cls += ' sub-message';
        div.className = cls;
        
        let content = text.replace(/\n/g, '<br>').replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
        if(sources.length) content += `<div class="rag-sources mt-2">${sources.map(s=>`<span class="rag-chip"><i class="bi bi-file-pdf"></i> ${s.filename}</span>`).join('')}</div>`;

        div.innerHTML = `${!isMe ? `<div class="message-avatar">${meta.avatar}</div>` : ''}
            <div class="message-bubble-container">
                ${!isMe ? `<div class="message-sender">${meta.name}</div>` : ''}
                <div class="message-bubble">${content}</div>
            </div>`;
        document.getElementById('chatWrap').appendChild(div);
        document.querySelector('.chat-content').scrollTop = 99999;
    }
    
    // Auto-resize textarea
    const tx = document.getElementById('chatInput');
    tx.addEventListener("input", function(){ this.style.height = 'auto'; this.style.height = (this.scrollHeight) + 'px'; });

    // Mentions logic (simplified)
    const mentionList = document.getElementById('mentionList');
    tx.addEventListener('keyup', (e) => {
        if(e.key === '@') {
            mentionList.innerHTML = activePersonas.map(p => `<div class="mention-item" onclick="insertMention('${p.ministry}')"><div class="mention-avatar">${p.avatarEmoji}</div><div>${p.ministry}</div></div>`).join('');
            mentionList.classList.add('show');
        } else if(e.key === 'Escape' || e.key === ' ') mentionList.classList.remove('show');
    });
    function insertMention(name) { tx.value += name + ' '; mentionList.classList.remove('show'); tx.focus(); }

    function clearChat() { if(confirm('Effacer la vue ?')) document.getElementById('chatWrap').innerHTML = ''; }
    
    // Upload RAG placeholder
    function uploadRag() { alert("Upload activ√© dans l'admin ou via le drag & drop (bient√¥t)"); }

    init();
  </script>
