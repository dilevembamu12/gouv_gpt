    .modal-header { border-bottom: 1px solid var(--c-border); }
    .modal-footer { border-top: 1px solid var(--c-border); }
    .form-control { background: #111; border: 1px solid var(--c-border); color: white; border-radius: 10px; }
    .form-control:focus { background: #111; color: white; border-color: #006fee; box-shadow: 0 0 0 3px rgba(0,111,238,0.2); }
    .thinking-dots::after { content: ' .'; animation: dots 1.5s steps(5, end) infinite; }
    @keyframes dots { 0%, 20% { content: ' .'; } 40% { content: ' ..'; } 60% { content: ' ...'; } 80%, 100% { content: ' ....'; } }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
    @keyframes slideUp { from { opacity: 0; transform: translateY(5px); } to { opacity: 1; transform: translateY(0); } }

    /* Mobile */
    @media (max-width: 900px) {
        .app-sidebar { display: none; }
        .app-inspector { position: absolute; right: 0; height: 100%; box-shadow: -5px 0 20px rgba(0,0,0,0.5); }
        .app-inspector.collapsed { transform: translateX(100%); width: 300px; opacity: 1; }
    }
