  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let currentRoomId = null;
    let allPersonas = [];
    let activePersonas = [];
    let ragFilesList = [];
    let isPolling = false;

    // --- PROMPT LIBRARY DATA & LOGIC ---
    const PROMPTS = [
        { icon: "üí∞", title: "Analyse Budg√©taire", text: "Quels sont les impacts budg√©taires √† court et long terme de cette mesure sur les finances publiques ?", desc: "√âvaluation financi√®re et fiscale." },
        { icon: "‚öñÔ∏è", title: "Risque Juridique", text: "Identifiez les risques d'inconstitutionnalit√© ou de contentieux europ√©en li√©s √† ce projet de loi.", desc: "Analyse de conformit√© l√©gale." },
        { icon: "üåç", title: "Impact √âcologique", text: "Quelle est l'empreinte carbone estim√©e de ce projet et sa compatibilit√© avec nos engagements climatiques ?", desc: "√âvaluation environnementale." },
        { icon: "üì£", title: "√âl√©ments de Langage", text: "Proposez des √©l√©ments de langage pour d√©fendre cette r√©forme face aux critiques de l'opposition.", desc: "Strat√©gie de communication." },
        { icon: "ü§ù", title: "Synth√®se Sociale", text: "Quels sont les points de friction pr√©visibles avec les partenaires sociaux et comment les d√©samorcer ?", desc: "Analyse du climat social." },
        { icon: "üö®", title: "Gestion de Crise", text: "Proposez un plan d'action imm√©diat pour r√©pondre √† l'urgence sanitaire signal√©e.", desc: "R√©ponse op√©rationnelle rapide." }
    ];

    function openPromptLibrary() {
        const grid = document.getElementById('promptGrid');
        grid.innerHTML = PROMPTS.map(p => `
            <div class="col-md-4 col-sm-6">
                <div class="prompt-card" onclick="usePrompt('${p.text.replace(/'/g, "\\'")}')">
                    <div class="prompt-icon">${p.icon}</div>
                    <div class="prompt-title">${p.title}</div>
                    <div class="prompt-desc">${p.desc}</div>
                </div>
            </div>
        `).join('');
        new bootstrap.Modal(document.getElementById('promptModal')).show();
    }

    function usePrompt(text) {
        const input = document.getElementById('chatInput');
        input.value = text;
        // Trigger auto-resize
        input.style.height = 'auto'; 
        input.style.height = (input.scrollHeight) + 'px';
        input.focus();
        
        // Close modal
        bootstrap.Modal.getInstance(document.getElementById('promptModal')).hide();
    }

    // --- MENTION LOGIC (Telegram Style) ---
    const chatInput = document.getElementById('chatInput');
    const mentionList = document.getElementById('mentionList');
    let mentionSelectedIndex = -1;

    chatInput.addEventListener('keydown', (e) => {
        const listItems = mentionList.querySelectorAll('.mention-item');
        
        // Navigation dans la liste si elle est ouverte
        if (mentionList.classList.contains('show') && listItems.length > 0) {
            if (e.key === 'ArrowUp') {
                e.preventDefault();
                mentionSelectedIndex = (mentionSelectedIndex > 0) ? mentionSelectedIndex - 1 : listItems.length - 1;
                updateMentionSelection(listItems);
                return;
            } else if (e.key === 'ArrowDown') {
                e.preventDefault();
                mentionSelectedIndex = (mentionSelectedIndex < listItems.length - 1) ? mentionSelectedIndex + 1 : 0;
                updateMentionSelection(listItems);
                return;
            } else if (e.key === 'Enter' || e.key === 'Tab') {
                e.preventDefault();
                if (mentionSelectedIndex > -1 && listItems[mentionSelectedIndex]) {
                    listItems[mentionSelectedIndex].click();
                }
                return;
            } else if (e.key === 'Escape') {
                e.preventDefault();
                mentionList.classList.remove('show');
                return;
            }
        }

        // Envoi classique si pas de mention active
        if(e.key === 'Enter' && !e.shiftKey) {
             e.preventDefault(); 
             sendMessage(); 
        }
    });

    chatInput.addEventListener('keyup', (e) => {
        if (['ArrowUp', 'ArrowDown', 'Enter', 'Tab', 'Escape'].includes(e.key)) return;

        const val = chatInput.value;
        const cursorPosition = chatInput.selectionStart;
        
        // D√©tecter le mot en cours de frappe
        const textBeforeCursor = val.substring(0, cursorPosition);
        const lastAt = textBeforeCursor.lastIndexOf('@');
        
        if (lastAt !== -1) {
            // V√©rifier si le @ est pr√©c√©d√© d'un espace ou est en d√©but de ligne
            const charBeforeAt = textBeforeCursor[lastAt - 1];
            if (lastAt === 0 || /\s/.test(charBeforeAt)) {
                const query = textBeforeCursor.substring(lastAt + 1);
                // Si pas d'espace dans la requ√™te, on filtre
                if (!/\s/.test(query)) {
                    showMentions(query);
                    return;
                }
            }
        }
        
        mentionList.classList.remove('show');
        mentionSelectedIndex = -1;
    });

    function showMentions(query) {
        // Filtrer parmi les minist√®res ACTIFS
        const filtered = activePersonas.filter(p => 
            p.name.toLowerCase().includes(query.toLowerCase()) || 
            p.ministry.toLowerCase().includes(query.toLowerCase())
        );

        if (filtered.length === 0) {
            mentionList.classList.remove('show');
            mentionSelectedIndex = -1;
            return;
        }

        // G√©n√©rer le HTML
        mentionList.innerHTML = filtered.map((p, index) => `
            <div class="mention-item ${index === 0 ? 'selected' : ''}" onclick="insertMention('${p.ministry}')" data-index="${index}">
                <div class="mention-avatar">${p.avatarEmoji}</div>
                <div>
                    <div class="fw-bold">${p.ministry}</div>
                    <div class="text-secondary" style="font-size:10px;">${p.name}</div>
                </div>
            </div>
        `).join('');
        
        mentionList.classList.add('show');
        mentionSelectedIndex = 0; // S√©lectionner le premier par d√©faut
    }

    function updateMentionSelection(listItems) {
        listItems.forEach((item, index) => {
            if (index === mentionSelectedIndex) {
                item.classList.add('selected');
                item.scrollIntoView({ block: 'nearest' });
            } else {
                item.classList.remove('selected');
            }
        });
    }

    function insertMention(ministryName) {
        const val = chatInput.value;
        const cursorPosition = chatInput.selectionStart;
        const textBeforeCursor = val.substring(0, cursorPosition);
        const textAfterCursor = val.substring(cursorPosition);
        
        const lastAt = textBeforeCursor.lastIndexOf('@');
        const textBeforeAt = textBeforeCursor.substring(0, lastAt);
        
        // Ins√©rer le tag avec un espace apr√®s
        const newText = textBeforeAt + `@${ministryName} ` + textAfterCursor;
        
        chatInput.value = newText;
        
        // Placer le curseur apr√®s le tag
        const newCursorPos = lastAt + ministryName.length + 2; 
        chatInput.setSelectionRange(newCursorPos, newCursorPos);
        chatInput.focus();
        
        mentionList.classList.remove('show');
        mentionSelectedIndex = -1;
    }


    // --- UTILS ---
    function formatTime() {
        const now = new Date();
        return now.toLocaleTimeString('fr-FR', {hour:'2-digit', minute:'2-digit'});
    }
    setInterval(() => { const el = document.getElementById('sessionTime'); if(el) el.innerText = formatTime(); }, 60000);

    const tx = document.getElementById('chatInput');
    tx.setAttribute('style', 'height:' + (tx.scrollHeight) + 'px;overflow-y:hidden;');
    tx.addEventListener("input", function() {
        this.style.height = 'auto'; this.style.height = (this.scrollHeight) + 'px';
    }, false);

    function toggleInspector() {
        document.getElementById('appInspector').classList.toggle('collapsed');
    }

    function clearChat() {
        document.getElementById('chatWrap').innerHTML = `
            <div class="d-flex flex-column align-items-center justify-content-center h-100 text-center opacity-50 empty-state">
                <div style="font-size: 48px; margin-bottom: 20px;">‚ú®</div>
                <h4>Nouvelle Session</h4>
                <p class="text-secondary" style="max-width: 400px;">Le contexte a √©t√© nettoy√©.</p>
            </div>
        `;
    }

    // --- INIT ---
    async function init() {
        try {
            const res = await fetch('/api/admin/personas');
            const config = await res.json();
            allPersonas = config.personas;
            const selector = document.getElementById('personaSelector');
            selector.innerHTML = allPersonas.map(p => `
                <div class="col-6">
                    <div class="position-relative">
                        <input class="form-check-input position-absolute top-0 end-0 m-2" type="checkbox" value="${p.id}" id="chk_${p.id}" checked style="z-index:2;">
                        <label class="d-flex align-items-center gap-2 p-2 border border-secondary border-opacity-25 rounded-3 bg-dark" for="chk_${p.id}" style="cursor:pointer;">
                            <div class="fs-4">${p.avatarEmoji}</div>
                            <div style="line-height:1.2; overflow:hidden;">
                                <div class="fw-bold text-white small text-truncate">${p.ministry}</div>
                                <div class="text-secondary" style="font-size:10px;">${p.name}</div>
                            </div>
                        </label>
                    </div>
                </div>
            `).join('');
            new bootstrap.Modal(document.getElementById('roomModal')).show();
        } catch (e) { console.error(e); }
    }

    // --- CREATE ROOM ---
    async function createRoom() {
        const name = document.getElementById('roomNameInput').value || "Conseil Ordinaire";
        const ids = [...document.querySelectorAll('#personaSelector input:checked')].map(c => c.value);
        
        try {
            const res = await fetch('/api/rooms', {
                method: 'POST', headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ name, selectedPersonaIds: ids })
            });
            const data = await res.json();
            if(data.ok){
                currentRoomId = data.room.id;
                activePersonas = allPersonas.filter(p => ids.includes(p.id));
                document.getElementById('roomTitleDisplay').innerText = name;
                renderSidebar();
                bootstrap.Modal.getInstance(document.getElementById('roomModal')).hide();
                document.querySelector('.modal-backdrop')?.remove();
            }
        } catch(e) { alert("Erreur: " + e.message); }
    }

    function renderSidebar() {
        document.getElementById('activePersonasCol').innerHTML = activePersonas.map(p => `
            <div class="persona-item">
                <div class="persona-avatar">${p.avatarEmoji}</div>
                <div class="overflow-hidden">
                    <div class="fw-bold text-white" style="font-size:12px;">${p.ministry}</div>
                    <div class="text-secondary text-truncate" style="font-size:10px;">${p.role}</div>
                </div>
            </div>
        `).join('');
    }

    // --- UPLOAD RAG ---
    async function uploadRag() {
        const file = document.getElementById('ragInput').files[0];
        if(!file) return;
        const status = document.getElementById('statusIndicator');
        status.innerHTML = `<span class="spinner-border spinner-border-sm me-2" style="width:10px;height:10px;"></span> Analyse de ${file.name}...`;
        const fd = new FormData(); fd.append('file', file);
        try {
            const res = await fetch(`/api/rooms/${currentRoomId}/ingest`, {method:'POST', body:fd});
            const d = await res.json();
            if(d.ok) {
                status.innerHTML = "";
                // Ajouter √† la liste visuelle droite
                ragFilesList.push({ name: file.name, type: 'PDF' });
                renderInspectorFiles();
                addMessage("system", `üìÇ Document <strong>${file.name}</strong> ajout√© au dossier.`);
                // Ouvrir l'inspecteur pour montrer le fichier
                document.getElementById('appInspector').classList.remove('collapsed');
            } else { status.innerText = "Erreur upload."; alert(d.error); }
        } catch(e) { status.innerText = "Erreur r√©seau"; }
    }

    function renderInspectorFiles() {
        const container = document.getElementById('inspectorFileList');
        if(ragFilesList.length === 0) {
            container.innerHTML = `<div class="text-center text-secondary small py-4 opacity-50 fst-italic">Aucun document joint</div>`;
            return;
        }
        container.innerHTML = ragFilesList.map(f => `
            <div class="file-card">
                <div class="file-icon"><i class="bi bi-file-earmark-pdf-fill"></i></div>
                <div class="file-info">
                    <div class="file-name" title="${f.name}">${f.name}</div>
                    <div class="file-meta">Index√© ‚Ä¢ Pr√™t pour RAG</div>
                </div>
            </div>
        `).join('');
    }

    // --- ASYNC CHAT LOGIC WITH POLLING ---
    async function sendMessage() {
        if(isPolling) return;
        const input = document.getElementById('chatInput');
        const sendBtn = document.getElementById('sendBtn');
        const text = input.value.trim();
        if(!text) return;

        input.value = ''; input.style.height = 'auto';
        document.querySelector('.empty-state')?.remove();
        sendBtn.disabled = true;

        addMessage('me', text);
        const status = document.getElementById('statusIndicator');
        status.innerHTML = `<span class="thinking-dots">L'orchestrateur consulte les minist√®res</span>`;

        try {
            // 1. Lance la t√¢che
            const res = await fetch('/api/chat/n8n', {
                method: 'POST', headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ roomId: currentRoomId, message: text })
            });
            const initRes = await res.json();
            
            if (initRes.ok && initRes.taskId) {
                // 2. Poll pour le r√©sultat
                pollTask(initRes.taskId);
            } else {
                throw new Error(initRes.error || "Erreur d'initialisation de t√¢che");
            }
        } catch (e) { 
            addMessage('system', `‚ùå Erreur : ${e.message}`); 
            status.innerHTML = '';
            sendBtn.disabled = false;
        } 
    }

    async function pollTask(taskId) {
        isPolling = true;
        const statusEl = document.getElementById('statusIndicator');
        const sendBtn = document.getElementById('sendBtn');
        const pollInterval = 2000; // 2s

        const check = async () => {
            try {
                const res = await fetch(`/api/chat/task/${taskId}`);
                const json = await res.json();
                
                if(json.status === 'completed') {
                    // Success!
                    isPolling = false;
                    statusEl.innerHTML = '';
                    sendBtn.disabled = false;
                    
                    let n8nData = json.data.data; // Structure might vary depending on n8n webhook response wrapper
                    if (!n8nData && json.data) n8nData = json.data;
                    
                    // Handle array response from n8n
                    if (Array.isArray(n8nData)) n8nData = n8nData[0];
                    
                    renderResponse(n8nData);

                } else if (json.status === 'error') {
                    throw new Error(json.error);
                } else {
                    // Still processing
                    setTimeout(check, pollInterval);
                }
            } catch(e) {
                isPolling = false;
                statusEl.innerHTML = '';
                sendBtn.disabled = false;
                addMessage('system', `‚ùå Erreur de traitement : ${e.message}`);
            }
        }
        check();
    }

    function renderResponse(n8nData) {
        let hasContent = false;
        
        console.log("Rendering Data:", n8nData);

        if(n8nData.global_synthesis) {
            addMessage('synthesis', n8nData.global_synthesis, { name: "Synth√®se du Conseil", avatar: "üèõÔ∏è" });
            hasContent = true;
        }
        if(n8nData.responses && Array.isArray(n8nData.responses)) {
            n8nData.responses.forEach(r => {
                addMessage('bot', r.text, {
                    name: r.ministry_name || "Minist√®re",
                    avatar: r.avatar_emoji || "üë§",
                    isSubItem: true
                }, r.rag_sources);
            });
            hasContent = true;
        }
        if(!hasContent && n8nData.response) {
            addMessage('bot', n8nData.response, { name: "Secr√©tariat", avatar: "üìù" });
            hasContent = true;
        }
        if(!hasContent) {
            addMessage('system', `<span class="text-warning">Format brut re√ßu</span><br><pre style="font-size:10px; max-height:100px; overflow:auto;">${JSON.stringify(n8nData, null, 2)}</pre>`);
        }
    }

    function addMessage(type, text, meta = {}, sources = []) {
        const wrap = document.getElementById('chatWrap');
        const div = document.createElement('div');
        
        if (type === 'system') {
            div.className = "text-center my-3 small text-secondary opacity-75 font-monospace";
            div.innerHTML = text;
        } else {
            const isMe = type === 'me';
            let classes = `message-row ${isMe ? 'me' : (type === 'synthesis' ? 'synthesis' : 'bot')}`;
            if(meta.isSubItem) classes += ' sub-message';

            div.className = classes;
            
            let content = text.replace(/\n/g, '<br>').replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
            if(sources && sources.length > 0) {
                content += `<div class="rag-sources">`;
                sources.forEach(s => {
                    content += `<span class="rag-chip" title="Page ${s.page}"><i class="bi bi-file-earmark-pdf-fill"></i> ${s.filename}</span>`;
                });
                content += `</div>`;
            }

            const avatarHtml = !isMe ? `<div class="message-avatar-container"><div class="message-avatar">${meta.avatar || 'ü§ñ'}</div></div>` : '';
            const senderHtml = !isMe ? `<div class="message-sender">${meta.name || 'IA'}</div>` : '';

            div.innerHTML = `${avatarHtml}<div class="message-bubble-container">${senderHtml}<div class="message-bubble">${content}</div></div>`;
        }
        wrap.appendChild(div);
        const main = document.querySelector('.chat-content');
        main.scrollTop = main.scrollHeight;
    }

    init();
  </script>
